%div
  .row
    .col-lg-4
      .well.sidebar-nav
        -if @user.photo.present?
          = link_to(image_tag(@user.photo.image.url(:thumb)), photo_path(@user.photo))
        - else
          = image_tag 'missing_avatar.png', size: '200x200'
    .col-lg-8
      .well.sidebar-nav
        %h2= @user.first_name+" "+@user.last_name
        %p= @user.email
        %p= @user.birthday
        %p= @user.sex
%div
  .row
    - if @user.posts.present?
      - @user.posts.each do |post|
        = link_to '', post_path(post),method: :delete, class: 'glyphicon glyphicon-remove'
        .well.sidebar-nav
          %h1
            = link_to post.name, post
          = form_for :like, url: post_path(post), method: :patch, html: { multipart: true } do |f|
            = f.hidden_field :source =>  post
            = f.submit '',id:'like', :type => :image, :src => image_path('loys.png')
          %p= post.text
          - post.photos.each do |photo|
            - if photo.image.present?
              = link_to(image_tag(photo.image.url(:thumb)), photo_path(photo))
              %br
          %br
            = (post.likes.count.to_s+' Likes')







