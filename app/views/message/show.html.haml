.well.sidebar-nav
  %h3
    = link_to 'To: '+ @message.user.first_name + ' ' + @message.user.last_name, user_path(@message.user)
  %h4
    = link_to 'From: '+ User.find(@message.user_from).first_name + ' ' + User.find(@message.user_from).last_name,user_path(User.find(@message.user_from))
  %p
    = content_with_emoji(@message.message_text.html_safe)

  %br
    - if @message.photos.present?
      - @message.photos.each do |photo|
        - if photo.image.present?
          = image_tag(photo.image.url(:medium))
    %p
      = @message.created_at.in_time_zone('Europe/Kiev')
    %br
    = link_to 'Delete', message_path(@message),method: :delete
    = link_to 'Back', message_index_path