.well.sidebar-nav
  %h3
    = link_to 'To: '+ @message.user.first_name + ' ' + @message.user.last_name, profile_path(@message.user)
  %h4
    = link_to 'From: '+ User.find(@message.user_from).first_name + ' ' + User.find(@message.user_from).last_name,profile_path(User.find(@message.user_from))
  %p
    = @message.message_text
  %br
    - if @message.photos.present?
      - @message.photos.each do |photo|
        - if photo.image.present?
          = link_to(image_tag(photo.image.url(:medium)), photo_path(photo))
    %br
    = link_to 'Delete', message_path(@message),method: :delete
    = link_to 'Back', message_index_path