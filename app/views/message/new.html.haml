%h1 New message
= form_for @message, url: '/message', method: :post, html: { multipart: true } do |f|
  = f.label 'To'
  %br
  = f.select :user_id,  User.all.collect { |p| [ p.first_name + ' ' + p.last_name, p.id ] }
  %br
  = f.label 'Message'
  %br
  = f.text_area :message_text,size: '80x10'
  %br
  = f.file_field :image,id:'pictureInput'
  #target
  %br
  = f.submit 'Send'
  = link_to 'Back', message_index_path
  :javascript
      $(function() {
      $('#pictureInput').on('change', function(event) {
      var files = event.target.files;
      var image = files[0]
      var reader = new FileReader();
      reader.onload = function(file) {
      var img = new Image();
      console.log(file);
      img.src = file.target.result;
      $('#target').html(img);
      }
      reader.readAsDataURL(image);
      console.log(files);
      });
      });
