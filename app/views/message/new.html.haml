%h1 New message
= form_for @message, url: '/message', method: :post, html: { multipart: true } do |f|
  = f.label 'To'
  %br
  = f.select :user_id,  User.all.collect { |p| [ p.first_name + ' ' + p.last_name, p.id ] }
  %br
  = f.label 'Message'
  %br
  = f.text_area :message_text,size: '80x10'
  %br
  = f.file_field :image
  %br
  = f.submit 'Send'
  = link_to 'Back', message_index_path
  :javascript
      var el = document.getElementById("message_image");
      el.onclick = function() {
      var div = document.createElement('div');
      div.innerHTML = '<input name="message[image]" id="message_image" type="file">';

      document.getElementById("new_message").appendChild(div);
      };
